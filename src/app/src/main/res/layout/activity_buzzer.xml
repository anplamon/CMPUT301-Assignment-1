<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView
        android:text="@string/menu_title"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"/>

    <Button
        android:id="@+id/statisticsButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/statistics_menu_button"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/multiplayerButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/multiplayer_menu_button"
        android:layout_above="@+id/statisticsButton"/>

    <Button
        android:id="@+id/reactionButton"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/reaction_menu_button"
        android:layout_above="@+id/multiplayerButton"/>

</RelativeLayout>
