<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.aaronplamondon.anplamon_reflex" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".appMenu"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".reflexGame"
            android:label="@string/title_activity_reflex_game"
            android:parentActivityName=".appMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aaronplamondon.anplamon_reflex.appMenu" />
        </activity>
        <activity
            android:name=".statistics"
            android:label="@string/title_activity_statistics"
            android:parentActivityName=".appMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aaronplamondon.anplamon_reflex.appMenu" />
        </activity>
        <activity
            android:name=".multiplayer"
            android:label="@string/title_activity_multiplayer"
            android:parentActivityName=".appMenu" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.aaronplamondon.anplamon_reflex.appMenu" />
        </activity>
    </application>

</manifest>
