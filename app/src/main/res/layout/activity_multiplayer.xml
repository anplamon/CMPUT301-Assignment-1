
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    tools:context="com.example.aaronplamondon.anplamon_reflex.multiplayer">

    <TextView
        android:id="@+id/title"
        android:text="@string/multiplayer_menu_title"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/playerBar"
        android:max="66"
        android:layout_marginRight="100dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/title" />

    <Button
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="2 Players"
        android:textSize="12sp"
        android:id="@+id/createBuzzerButton"
        android:layout_alignTop="@+id/playerBar"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
